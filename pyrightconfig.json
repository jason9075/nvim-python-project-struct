{
  "include": [
    "src",
    "tests"
  ],
  
  "exclude": [
    "**/node_modules",
    "**/__pycache__"
  ],

  "ignore": [
    "src/oldstuff"
  ],

  "defineConstant": {
    "DEBUG": true
  },

  "reportMissingImports": true,
  "reportMissingTypeStubs": false,

  "executionEnvironments": [
    {
      "root": "tests",
      "extraPaths": [
        "src"
      ]
    },
    {
      "root": "src"
    }
  ]
}
